{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "emitDecoratorMetadata": true
    },
    "exclude": [
        "src/**/*.spec.ts",
        "src/**/*.test.ts"
    ],
    "include": [
        "src/**/*.stories.ts",
        "src/**/*.stories.js",
        "src/**/*.stories.jsx",
        "src/**/*.stories.tsx",
        "src/**/*.stories.mdx",
        ".storybook/*.js",
        ".storybook/*.ts"
    ]
}